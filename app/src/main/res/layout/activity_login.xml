<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/tools"

    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="sleeptracking.android.com.sleeptracking.LoginActivity">

    <include layout="@layout/toolbar_all_page"
        android:id="@+id/toolbar">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/trLoginActivityMargin">

                <EditText
                    android:id="@+id/etLoginActivityCode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etLoginActivityHeight"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/et_drawable"
                    android:hint="کد"
                    android:textSize="@dimen/tvLoginActivityTextSize"

                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/trLoginActivityMargin">

                <EditText
                    android:id="@+id/etLoginActivityPhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etLoginActivityHeight"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/et_drawable"
                    android:hint="شماره تلفن همراه"
                    android:textSize="@dimen/tvLoginActivityTextSize"

                    />

            </TableRow>





            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/trLoginActivityMargin">


                <info.hoang8f.widget.FButton
                    android:id="@+id/btnLoginActivityLogin"
                    android:text="ورود"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    fbutton:buttonColor="@color/fbutton_color_peter_river"
                    fbutton:cornerRadius="5dp"
                    fbutton:shadowColor="@color/fbutton_color_belize_hole"
                    fbutton:shadowEnabled="true"



                    fbutton:shadowHeight="5dp" />

            </TableRow>



        </TableLayout>
    </LinearLayout>

</LinearLayout>
