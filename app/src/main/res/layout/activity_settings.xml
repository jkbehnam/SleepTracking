<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arithtopia.android.com.arithtopia.SettingsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_all_page">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/btnActivitySettingSave">



    </ScrollView>

    <Button
        android:id="@+id/btnActivitySettingSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/save"
        android:background="@color/colorPrimaryNew"
        android:textColor="@color/btnActivitySettingTextcolor"/>


</RelativeLayout>
