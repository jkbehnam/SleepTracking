<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="arithtopia.android.com.arithtopia">

    <application
        android:allowBackup="false"
        android:icon="@drawable/new_ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/new_ic_icon"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">
        <activity
            android:name="arithtopia.android.com.arithtopia.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="arithtopia.android.com.arithtopia.ProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="arithtopia.android.com.arithtopia.QuestionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="arithtopia.android.com.arithtopia.ReportActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="arithtopia.android.com.arithtopia.AdviseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="arithtopia.android.com.arithtopia.MessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="arithtopia.android.com.arithtopia.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="arithtopia.android.com.arithtopia.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="arithtopia.android.com.arithtopia.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="arithtopia.android.com.arithtopia.NotificationSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="arithtopia.android.com.arithtopia.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name="arithtopia.android.com.arithtopia.Add_New_Gamer"
            android:label="@string/title_activity_add__new__gamer"
            android:theme="@style/MainTheme"></activity>
    </application>

</manifest>